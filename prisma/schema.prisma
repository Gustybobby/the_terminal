generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(cuid())
  email      String    @unique
  name       String?
  role       Role      @default(USER)
  terminal   Terminal? @relation(fields: [terminalId], references: [id], onUpdate: Restrict, onDelete: Restrict)
  terminalId Int?
  airline    Airline?  @relation(fields: [airlineId], references: [id], onUpdate: Restrict, onDelete: Restrict)
  airlineId  Int?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model Terminal {
  id                  Int             @id
  title               String
  description         String
  passengerRate       Int
  staffs              User[]
  caturedBy           Airline?        @relation(fields: [airlineId], references: [id], onUpdate: Restrict, onDelete: Restrict)
  airlineId           Int?
  capturedByRecords   CaptureRecord[]
  lastPassengerUpdate DateTime
  currentFlagSecret   String
}

model Airline {
  id                Int             @id
  airlineSecret     String
  passengers        Int
  lastSecretAttempt DateTime
  crews             User[]
  captures          Terminal[]
  captureRecords    CaptureRecord[]
  class             AirlineClass?   @relation(fields: [classId], references: [id], onUpdate: Restrict, onDelete: Restrict)
  classId           Int?
}

model CaptureRecord {
  id         Int      @id @default(autoincrement())
  capturedAt DateTime
  terminal   Terminal @relation(fields: [terminalId], references: [id], onUpdate: Restrict, onDelete: Restrict)
  terminalId Int
  airline    Airline  @relation(fields: [airlineId], references: [id], onUpdate: Restrict, onDelete: Restrict)
  airlineId  Int
}

model AirlineClass {
  id       Int       @id @default(autoincrement())
  title    String
  effect   Json?
  airlines Airline[]
}

enum Role {
  ADMIN
  STAFF
  USER
}
